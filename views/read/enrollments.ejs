<% layout("layouts/boilerplate") -%>

<div class="container my-3 p-2">
  <h2 class="mb-4">Enrollment Data</h2>
  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Student Name</th>
          <th>Subject Name</th>
          <th>Enroll Date</th>
        </tr>
      </thead>
      <tbody>
        <% for(const enl of enrollments) { const hireDate = new
        Date(enl.enroll_date); const formattedDate =
        hireDate.toLocaleDateString('en-GB', { year: 'numeric', month: 'short',
        day: '2-digit' }); %>
        <tr>
          <td><%= enl.enroll_id %></td>
          <td><%= enl.full_name %>th</td>
          <td><%= enl.subject_name %></td>
          <td><%= formattedDate %></td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
